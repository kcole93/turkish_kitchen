---
const { title = '' } = Astro.props
---

<section class='py-8'>
  <div class='container mx-auto px-4'>
    <h2 class='text-3xl md:text-4xl font-bold mb-4 text-center font-logo'>
      {title}
    </h2>
    <div
      class='text-lg md:text-xl leading-relaxed text-gray-700 text-center max-w-2xl mx-auto'
    >
      <slot />
    </div>
  </div>
</section>
