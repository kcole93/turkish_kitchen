---
const { recipes = [], title = '' } = Astro.props
---

<section class='py-12'>
  <div class='container mx-auto px-4'>
    <h2 class='text-3xl md:text-4xl font-bold mb-6 text-center font-logo'>
      {title}
    </h2>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
      {
        recipes.map((recipe) => (
          <article class='bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 ease-in-out hover:-translate-y-2 hover:shadow-lg'>
            <img
              class='w-full h-64 object-cover'
              src={recipe.image.url}
              alt={recipe.title}
            />
            <div class='p-4'>
              <h3 class='text-xl font-bold mb-2'>{recipe.title}</h3>
              <p class='text-gray-700' set:html={recipe.description} />
              <a
                href={`/recipes/${recipe.slug}`}
                class='text-primary font-semibold hover:text-secondary mt-2 inline-block'
              >
                Read more &rarr;
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
