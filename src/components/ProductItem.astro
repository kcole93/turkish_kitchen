---
const {
  title,
  image,
  description,
  price,
  ctaLink,
  ctaText = 'Buy Now'
} = Astro.props
---

<div class='rounded-lg shadow-md p-6 text-center'>
  <img class='w-full h-68 object-cover mb-4 rounded' src={image} alt={title} />
  <h3 class='text-2xl font-semibold mb-2'>{title}</h3>
  <p class='text-gray-700 mb-4'>{description}</p>
  <p class='font-bold text-xl mb-4'>{price}</p>
  <a
    href={ctaLink}
    class='bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded'
    >{ctaText}</a
  >
</div>
